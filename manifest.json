{
  "manifest_version": 3,
  "name": "M3U8 Link Extractor",
  "description": "Extracts and copies m3u8 links from the webpage\n检测网站中m3u8链接，并提供复制功能。",
  "version": "1.1",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-2.png",
      "48": "icons/icon-2.png",
      "128": "icons/icon-2.png"
    }
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
